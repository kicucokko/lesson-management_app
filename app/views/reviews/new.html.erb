<%= form_with model: @review, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"review_title" %>
  </div>

  <div class="field">
    <%= f.label :text, "本文" %><br />
    <%= f.text_area :text, class: :form__text, id:"review-text" %>
  </div>

  <div class="field">
    <%= f.label :home_work, "宿題" %><br />
    <%= f.text_area :home_work, class: :form__text, id:"review-home-work" %>
  </div>

  <div class="field">
    <%= f.label :infomation, "備考" %><br />
    <%= f.text_area :infomation, class: :form__text, id:"review-infomation" %>
  </div>

  <div class="field">
    <%= f.label :image, "補足書類" %><br />
    <%= f.file_field :image, id:"prototype_image" %>
  </div>

  <div class="actions">
    <%= f.submit "送信する", class: :form__btn  %>
  </div>
<% end %>